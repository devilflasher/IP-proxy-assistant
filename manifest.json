{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "IP代理助手",
    "description": "这是一款代理管理工具，帮助您轻松配置和切换不同的网络代理。支持HTTP、HTTPS、SOCKS等多种代理类型，提供一键连接功能，适用于需要频繁切换网络环境、访问特定区域内容或保护网络隐私的用户。",
    "version": "3.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "./img/16.png",
        "48": "./img/48.png",
        "128": "./img/128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": "./img/128.png",
        "default_title": "IP代理助手 v3.0",
        "default_popup": "popup.html"
    },
    
    "permissions": [
        "storage",
        "proxy",
        "webRequest",
        "webRequestAuthProvider"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}
